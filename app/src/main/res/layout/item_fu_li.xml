<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="600mm"
    app:cardElevation="@dimen/boxShadow"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    android:layout_margin="@dimen/boxMargin"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="180mm"
            android:background="@drawable/shape_liner_w2b"
            app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:id="@+id/decs"
        android:layout_width="600mm"
        android:layout_height="89mm"
        android:layout_marginBottom="6mm"
        android:layout_marginStart="36mm"
        android:text="2019312309"
        android:textColor="@color/colorTextCardTitle"
        android:textSize="@dimen/textBigInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>